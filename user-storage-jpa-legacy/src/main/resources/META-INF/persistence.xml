<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="flex-storage-jpa">
        <jta-data-source>java:jboss/datasources/ExampleXADS</jta-data-source>

        <class>org.keycloak.quickstart.storage.user.entity.CfmastEntity</class>
        <class>org.keycloak.quickstart.storage.user.entity.AfmastEntity</class>
        <class>org.keycloak.quickstart.storage.user.entity.UserLoginEntity</class>

        <properties>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle12cDialect" />
            <property name="hibernate.datasource.driver_class" value="oracle.jdbc.OracleDriver" />
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver" />
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver" />
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver" />
        </properties>
    </persistence-unit>
</persistence>
